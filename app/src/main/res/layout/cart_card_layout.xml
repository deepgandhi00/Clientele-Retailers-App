<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/category_card_view"
    android:layout_margin="5dp"
    card_view:cardElevation="12dp"
    android:clickable="true"
    card_view:contentPadding="5dp"
    android:foreground="?android:selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/cart_card_image"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.99"
                    android:layout_height="wrap_content"
                    android:text="product name"
                    android:id="@+id/cart_card_prduct_name"
                    android:textSize="18sp"/>

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/cart_card_delete"
                    android:src="@android:drawable/ic_delete"
                    android:clickable="true"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/cart_card_qtywt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cart_card_cost"
                android:text="Rs. "
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cart_card_elegant"
                android:layout_marginTop="15dp"
                app:backGroundColor="@color/colorAccent">

            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
